;记录モンスター数量
@SUCCUBUS_NUM_3
#FUNCTION
RETURNF SUCCUBUS_NUM:3:0

;モンスター数量增加时管理名单
@SUCCUBUS_ADD_3,ARG
SUCCUBUS_NUM:3:0 += 1
FOR LOCAL,1,300
    IF SUCCUBUS_NUM:3:LOCAL == 0
        SUCCUBUS_NUM:3:LOCAL = ARG
        BREAK
    ENDIF
NEXT
RETURN LOCAL

;モンスター数量减少时管理名单
@SUCCUBUS_DEL_3,ARG
SUCCUBUS_NUM:3:0 = MAX(SUCCUBUS_NUM:3:0 - 1, 0)
FOR LOCAL,1,300
    IF SUCCUBUS_NUM:3:LOCAL == ARG
        SUCCUBUS_NUM:3:LOCAL = 0
        BREAK
    ENDIF
NEXT
RETURN LOCAL

