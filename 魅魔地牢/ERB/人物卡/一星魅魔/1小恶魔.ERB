;记录モンスター数量
@SUCCUBUS_NUM_1
#FUNCTION
RETURNF SUCCUBUS_NUM:1:0

;モンスター数量增加时管理名单
@SUCCUBUS_ADD_1,ARG
#DIM FLAG1
SUCCUBUS_NUM:1:0 += 1
FOR LOCAL,1,300
    IF SUCCUBUS_NUM:1:LOCAL == 0
        SUCCUBUS_NUM:1:LOCAL = ARG
        RETURN LOCAL
    ENDIF
NEXT

;モンスター数量减少时管理名单
@SUCCUBUS_DEL_1,ARG
SUCCUBUS_NUM:1:0 = MAX(SUCCUBUS_NUM:1:0 - 1, 0)
FOR LOCAL,1,300
    IF SUCCUBUS_NUM:1:LOCAL == ARG
        SUCCUBUS_NUM:1:LOCAL = 0
        RETURN LOCAL
    ENDIF
NEXT

