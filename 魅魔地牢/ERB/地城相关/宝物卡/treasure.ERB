@PRINT_TREASURE, ARG
#DIM COUNT1
#DIM COUNT2
#DIM STYLENO
#DIM BUTTON_STATE,2
#DIM CHOICE
#DIM SUM_NUM
#DIM MEMO_LINECOUNT


BUTTON_STATE:0 == 1
BUTTON_STATE:1 == 0
$PRINT_WEAPON
MEMO_LINECOUNT = LINECOUNT
PRINTL
PRINTL

ALIGNMENT CENTER
;预计样式为
;==============================================
;                    简短介绍
;                    名字(是否获得)
;----------------------------------------------
;星级
;详细效果
;背景故事
;==============================================
;返回

DRAWLINEFORM =
TRYCALLFORM TREASURE_TEXT_{ARG}

ALIGNMENT CENTER
FONTITALIC

PRINTFORML %TEXT_RETURN:0%

FONTREGULAR
ALIGNMENT LEFT
PRINTL

ALIGNMENT CENTER
TRYCALLFORM TREASURE_NAME_{ARG}
LOCALS:0 = %TEXT_RETURN:0%
TRYCALLFORM TREASURE_GET_{ARG}
IF RESULT == 1
    LOCALS:0 = %LOCALS:0%(GET)
ELSE
    LOCALS:0 = %LOCALS:0%
ENDIF
PRINTFORML %LOCALS:0%
ALIGNMENT LEFT

DRAWLINEFORM -

;  星级
LOCALS = 
LOCALS = %LOCALS%RANK:
TRYCALLFORM TREASURE_STAR_{ARG}
LOCAL = RESULT
LOCALS:1 =
IF LOCAL > 5
    FOR COUNT1, 0, LOCAL - 5
        LOCALS:1 = %LOCALS:1%★
    NEXT
ELSE
    FOR COUNT1, 0, LOCAL
        LOCALS:1 = %LOCALS:1%☆
    NEXT
ENDIF
PRINTFORML %LOCALS%
PRINTL

CALL RESET_TEXT_RETURN
PRINTFORM %BL(2)%効果:
TRYCALLFORM TREASURE_TEXT_{ARG}
COUNT2 = RESULT
CALL PRINT_STRL,@"%BL(2)%%TEXT_RETURN:1%"
PRINTL
FOR COUNT1 , 2, COUNT2
    CALL PRINT_STRL,@"%BL(2)%%TEXT_RETURN:COUNT1%"
NEXT

DRAWLINEFORM =
CALL PRINT_BUTTON_17,"戻る",999,1

INPUT
CHOICE = RESULT
SELECTCASE CHOICE
    CASE 999
        RETURN 
ENDSELECT

CLEARLINE LINECOUNT - MEMO_LINECOUNT
GOTO PRINT_WEAPON