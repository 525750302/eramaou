;-------------------------------------------------
;魔法油漆
;编号1 レベル0 
;所有设施立即获得一水晶的改进
;不限获得次数
;-------------------------------------------------
;返回是否有该编号的宝物
@TREASURE_1
RETURN 1

@TREASURE_NAME_1
VARSET TEXT_RETURN
TEXT_RETURN:0 = 魔法レンガ
RETURN 

;检查是否得到
@TREASURE_GET_1
RETURN 0

@TREASURE_STAR_1
RETURN 0

;返回宝物的文本
@TREASURE_TEXT_1
VARSET TEXT_RETURN
;宝物类的没有引用文本
;宝物类的第一行必须是非常简短的说明，不能多于九个字
TEXT_RETURN:0 = 施設経験
TEXT_RETURN:1 = すべての施設は水晶1個でアップグレードされます
TEXT_RETURN:2 = ▶。。。

;返回文本的行数
RETURN 3


;执行获得宝物之后的相关内容
;需要按照情况进行发挥
@TREASURE_ACT_1
#DIM COUNTX
#DIM COUNTY
FOR COUNTX,DUNGEON_START_X,DUNGEON_END_X+1
    FOR COUNTY,DUNGEON_START_Y,DUNGEON_END_Y+1

        IF DUNGEON:COUNTX:COUNTY > 1
            CALL ROOM_LV_UP,DUNGEON:COUNTX:COUNTY,DUNGEON_LEVEL:COUNTX:COUNTY, 1, COUNTX, COUNTY
            CALL ROOM_LV_CHANGE, DUNGEON:COUNTX:COUNTY,COUNTX,COUNTY,RESULT
        NEXT
    NEXT
NEXT
RETURN